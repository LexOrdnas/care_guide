<div class="container mt-5">
  <div class="row">
    <div class="col-12 table-responsive">
      <table class="table table-hover">
        <h3 class="h1 title-cg mb-5 mt-5 text-center">Instituições e Programas</h3>
        <thead>
          <tr class="bg-success text-white">
            <th scope="col"></th>
            <th scope="col">Instituição</th>
            <th scope="col">Endereço</th>
            <th scope="col"></th>
            <th scope="col"></th>
          </tr>
        </thead>

      <tbody>
    
        {{#each posts}}

        <tr>  
          <th scope="row"></th>

          <td>{{dataValues.title}}</td>
          <td>{{dataValues.content}}</td>
          <td></td>
          <td>
            <a href="/delete/{{dataValues.id}}">
              <button class="btn btn-sm btn-danger">Deletar</button>
            </a>
            
            <a href="/edit/{{dataValues.id}}">
              <button class="btn btn-sm btn-info">Editar</button>
            </a>  
          </td>  
        </tr>

        {{/each}}
    
      </tbody>
      </table>
    </div>
    <div class="container d-flex justify-content-center">
        <a href="/cad/{{dataValues.id}}">
          <button class="btn btn-success">Cadastrar nova</button>
        </a>
    </div>

  </div>
</div>

